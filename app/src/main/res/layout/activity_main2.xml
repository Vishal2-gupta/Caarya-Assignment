<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444B73"
    tools:context=".MainActivity2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:id="@+id/l2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarSize="30dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            app:tint="#FFFFFF"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tt1"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginRight="80dp"
                android:textColor="#FFFFFF"
                android:text="Trade Online"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#FFFFFF"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_work_outline_24"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#FFFFFF"
            android:src="@drawable/ic_baseline_crop_free_24"></ImageView>


    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:text="Categories"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:id="@+id/t1"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:text="Collapse All"
            android:textSize="20dp"
            android:layout_marginLeft="280dp"
            android:textColor="#22A8E4"
            android:id="@+id/t2"></TextView>
    <ImageButton
        android:layout_marginTop="600dp"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        android:id="@+id/i1"
        android:layout_marginLeft="280dp"
        android:tint="#12B3FB"
        ></ImageButton>
    </RelativeLayout>
</LinearLayout>