<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="#444B73"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:id="@+id/l2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarSize="30dp"
            android:layout_marginRight="120dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            app:tint="#FFFFFF"></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tt1"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginRight="120dp"
            android:textColor="#FFFFFF"
            android:text="Trade"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ttt1"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="Online"></TextView>
    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#FFFFFF"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_work_outline_24"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#FFFFFF"
            android:src="@drawable/ic_baseline_crop_free_24"></ImageView>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:layout_marginBottom="6dp"
        android:id="@+id/t1"
        android:textColor="#E8E3E3"
        android:layout_below="@+id/l2"
        />
    <EditText
        android:layout_width="440dp"
        android:layout_below="@+id/t1"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"
        android:textColor="#E8E3E3"
        android:background="@drawable/border"
        android:id="@+id/e1"/>
    <TextView
        android:textColor="#E8E3E3"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Price"
        android:layout_below="@+id/e1"
        android:layout_marginTop="6dp"
        android:id="@+id/t2"
        />
    <EditText
        android:layout_width="180dp"
        android:layout_below="@+id/t2"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"
        android:textColor="#E8E3E3"
        android:background="@drawable/border"
        android:id="@+id/e2"/>

    <TextView
        android:textColor="#E8E3E3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/e1"
        android:text="Store Price"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/t2"
        android:id="@+id/t3"
        />
    <EditText
        android:layout_width="180dp"
        android:layout_below="@+id/t3"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/e2"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textColor="#E8E3E3"
        android:padding="10dp"
        android:background="@drawable/border"
        android:id="@+id/e3"/>
    <TextView
        android:textColor="#E8E3E3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/e3"
        android:id="@+id/t4"
        />
    <EditText
        android:layout_width="440dp"
        android:layout_below="@+id/t4"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"
        android:textColor="#E8E3E3"
        android:background="@drawable/border"
        android:id="@+id/e4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginBottom="6dp"
        android:textColor="#E8E3E3"
        android:id="@+id/t5"
        android:layout_marginTop="6dp"
        android:layout_below="@id/e4"
        />
    <EditText
        android:layout_width="440dp"
        android:layout_below="@+id/t5"
        android:layout_height="83dp"
        android:text=""
        android:padding="10dp"
        android:textColor="#E8E3E3"
        android:background="@drawable/border"
        android:id="@+id/e5"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/e5"
        android:layout_marginLeft="330dp"
        android:textColor="#E8E3E3"
        android:id="@+id/l1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E8E3E3"
            android:text="0"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E8E3E3"
            android:text="/4000"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Pictures"
        android:layout_marginBottom="8dp"
        android:textColor="#E8E3E3"
        android:layout_below="@id/e5"
        android:id="@+id/t6"
        />
    <TextView
        android:layout_width="440dp"
        android:layout_below="@+id/t6"
        android:layout_height="140dp"
        android:text=""
        android:padding="10dp"
        android:textColor="#E8E3E3"
        android:background="@drawable/border"
        android:id="@+id/e6"/>

<ImageButton
    android:layout_width="70dp"
    android:layout_height="60dp"
    android:layout_below="@+id/t6"
    android:layout_marginTop="37dp"
    android:layout_marginLeft="160dp"
    android:scaleType="fitCenter"

    android:src="@drawable/ic_baseline_photo_camera_24"></ImageButton>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e6"
        android:id="@+id/b1"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:textColor="#FFFFFF"
        android:text="CANCEL"></Button>
<Button
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:id="@+id/b2"
    android:textColor="#FFFFFF"
    android:textAlignment="center"
    android:layout_marginTop="50dp"
    android:background="@drawable/border"
    android:layout_below="@id/e6"
    android:layout_marginLeft="20dp"
    android:layout_toRightOf="@+id/b1"
    android:text="SUBMIT"></Button>
    </RelativeLayout>
</LinearLayout>